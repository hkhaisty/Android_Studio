<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/crustradiogroup"
        android:layout_width="133dp"
        android:layout_height="123dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/normalcrustradiobutton"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:fontFamily="@font/pizzabyalfredo"
            android:text="Normal Crust"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/thincrustradiobutton"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:fontFamily="@font/pizzabyalfredo"
            android:text="Thin Crust"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/panpizzaradiobutton"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:fontFamily="@font/pizzabyalfredo"
            android:text="Pan Pizza"
            android:textSize="20dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="112dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Crust"
        android:textSize="40dp"
        app:fontFamily="@font/childrensparty"
        app:layout_constraintBottom_toTopOf="@+id/crustradiogroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="133dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="272dp"
        android:layout_marginRight="272dp"
        android:layout_marginBottom="8dp"
        android:text="Toppings"
        android:textSize="40dp"
        app:fontFamily="@font/childrensparty"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="269dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Dine In or To Go"
        android:textSize="40dp"
        app:fontFamily="@font/childrensparty"
        app:layout_constraintBottom_toTopOf="@+id/dineinbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="164dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Pizza Size"
        android:textSize="40dp"
        app:fontFamily="@font/childrensparty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toplogo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="149dp"
        android:layout_height="152dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/seekBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <CheckBox
            android:id="@+id/fetacheckbox"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pizzabyalfredo"
            android:text="Feta Cheese"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="78dp" />

        <CheckBox
            android:id="@+id/blackolivescheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pizzabyalfredo"
            android:text="Black Olives"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="110dp" />

        <CheckBox
            android:id="@+id/spinaichcheckbox"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pizzabyalfredo"
            android:text="Spinaich"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="142dp" />

        <CheckBox
            android:id="@+id/onionscheckbox"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pizzabyalfredo"
            android:text="Onions"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="174dp" />

        >
    </LinearLayout>

    <ImageButton
        android:id="@+id/dineinbutton"
        android:layout_width="122dp"
        android:layout_height="116dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/forhere"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/togobutton"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/togobutton"
        android:layout_width="140dp"
        android:layout_height="118dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/delivery"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dineinbutton"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/toplogo"
        android:layout_width="360dp"
        android:layout_height="114dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/childrensparty"
        android:text="Haisty Pizza"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="70dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="211dp"
        android:layout_height="236dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:max="27"
        android:progress="5"
        android:rotation="270"
        app:layout_constraintBottom_toTopOf="@+id/togobutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toEndOf="@+id/crustradiogroup"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />
    />


</android.support.constraint.ConstraintLayout>